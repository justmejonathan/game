
def spin_words(sentence):
    # Your code goes here
    list_of_words = sentence.split(" ")
    result = []
    #print(list_of_words)
    for i in list_of_words:
        if len(i) >= 5:
            reversedstring = "".join(reversed(i))
            result.append(reversedstring)
        else:
            result.append(i)
    print(" ".join(result))
    return spin_words
    
spin_words("Welcome my friend")